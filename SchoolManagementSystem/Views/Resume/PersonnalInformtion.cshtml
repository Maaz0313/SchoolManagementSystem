@model SchoolManagementSystem.ViewModels.EmployeeResumeTableVM
@{
    ViewBag.Title = "Personnal Informtion";
    Layout = "~/Views/Shared/_ResumeLayoutPage.cshtml";
}
<style type="text/css">
    .container {
        margin-top: -53px;
    }

    .row {
        margin-bottom: 25px;
    }

    .IconTitle {
        border: 3px solid #e0e0e0;
        display: inline-block;
        width: 70px;
        height: 70px;
        border-radius: 100%;
        background-color: #269abc;
    }

</style>

<div class="container">
    <div class="PersonnalInformtion FirstLevel" style="margin: 19% auto;">
        <div style="margin-left:18%;">
            <span class="IconTitle">
                <span class="glyphicon glyphicon-user" aria-hidden="true" style="margin-left:26px; margin-top: 23px; color:#FFF;"></span>
            </span>
            <h4 style="margin-left:8%;margin-top:-4%;">Personnal Informtion</h4>
        </div>
        @using (Html.BeginForm("PersonnalInformtion", "Resume", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="panel panel-default" style="width:65%;margin-left:18%;margin-top:3%;">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-xs-6">
                            <input type="file" class="form-control" name="ImageProfil" id="ImageProfil" onchange="fileCheck(this);" placeholder="Select Profile Image" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-6">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Last Name" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <div class="form-group">
                                <div class="input-group date" id="datetimepicker1">
                                    @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @placeholder = "Date Of Birth" } })
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                            @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-4">
                            @Html.DropDownListFor(model => model.Nationality, Model.ListNationality, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-4">
                            @Html.DropDownListFor(model => model.EducationalLevel, Model.ListEducationalLevel, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EducationalLevel, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            @Html.EditorFor(model => model.Address, Model.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "Address" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            @Html.EditorFor(model => model.Tel, Model.Tel, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tel" } })
                            @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-xs-6">
                            @Html.EditorFor(model => model.Email, Model.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "E-mail" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3">
                            @Html.EditorFor(model => model.FaceBookProfil, Model.FaceBookProfil, new { htmlAttributes = new { @class = "form-control", @placeholder = "Facebook Account" } })
                        </div>
                        <div class="col-xs-3">
                            @Html.EditorFor(model => model.LinkedInProdil, Model.LinkedInProdil, new { htmlAttributes = new { @class = "form-control", @placeholder = "LinkedIn Account" } })
                        </div>
                        <div class="col-xs-3">
                            @Html.EditorFor(model => model.C_CornerProfil, Model.C_CornerProfil, new { htmlAttributes = new { @class = "form-control", @placeholder = "C# Corner Account" } })
                        </div>
                        <div class="col-xs-3">
                            @Html.EditorFor(model => model.TwitterProfil, Model.TwitterProfil, new { htmlAttributes = new { @class = "form-control", @placeholder = "Twitter Account" } })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            @Html.EditorFor(model => model.Summary, Model.Summary, new { htmlAttributes = new { @class = "form-control", @placeholder = "Summary" } })
                        </div>
                    </div>
                    <input class="btn btn-info" type="submit" style="position:relative;right:-76%;" value=" Next Step>> Education " />
                    @*<a href="@Url.Action("Education", "Resume")" class="btn btn-success" style="position: relative; right: -76%;"> Next Step>> Education </a>*@

                    @if (ViewBag.Message != null)
                    {
                        <span> @ViewBag.Message </span>
                    }
                    @if (ViewBag.MessageForm != null)
                    {
                        <span>@ViewBag.MessageForm</span>
                    }


                </div> <!-- END PANEL BODY / Personnal Information-->
            </div> <!-- END PANEL DEFAULT-->
                    }
    </div>
</div>

