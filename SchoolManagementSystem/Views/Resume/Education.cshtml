@section scripts {
    <script type="text/javascript">
    $(document).ready(function () {
        //Change dropdown automatically based on the selected country
        // Define an object that maps countries to cities.
        var cityData = {
            "Country1": ["City1A", "City1B", "City1C"],
            "Country2": ["City2A", "City2B", "City2C"],
            // Add more countries and cities as needed.
        };

        // Populate the city dropdown based on the selected country.
        $("#Country").change(function () {
            var selectedCountry = $(this).val();
            var cities = cityData[selectedCountry] || [];

            var cityDropdown = $("#City");
            cityDropdown.empty();

            $.each(cities, function (index, city) {
                cityDropdown.append($("<option></option>")
                    .attr("value", city)
                    .text(city));
            });
        });
