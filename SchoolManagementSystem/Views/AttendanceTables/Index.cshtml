@model IEnumerable<DatabaseAccess.AttendanceTable>

@{
    ViewBag.Title = "Attendance Records";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add New Attendance", "Create")
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Sessions</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Session
                        </th>
                        <th>
                            Attend Date
                        </th>
                        <th>
                            Attend Time
                        </th>
                        <th>
                            Class
                        </th>
                        <th>
                            Student
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SessionID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AttendTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ClassTable.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentTable.Name)
                        </td>
                        <td class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.AttendanceID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.AttendanceID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.AttendanceID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                     }
                </tbody>
            </table>
        </div>
    </div>
</div>
